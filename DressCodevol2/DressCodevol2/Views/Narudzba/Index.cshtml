@model IEnumerable<DressCode.Models.NarudzbaIndexViewModel>

<h1>Popis narudžbi</h1>

<div class="row row-cols-1 row-cols-md-2 g-4">
    @foreach (var o in Model)
    {
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">@o.ImePrezime</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@o.DatumKreiranja</h6>
                    <p class="card-text">
                        <strong>Adresa:</strong> @o.Adresa<br />
                        <strong>Artikli:</strong><br />
                        @foreach (var art in o.Artikli)
                        {
                            <span class="badge bg-secondary me-1">@art</span>
                        }
                    </p>
                </div>
                <div class="card-footer d-flex align-items-center">
                    <small class="text-success">@o.Status</small>
                    <a asp-action="Delete"
                       asp-route-id="@o.NarudzbaId"
                       class="btn btn-sm btn-outline-danger ms-auto"
                       title="Označi kao isporučeno">
                        Označi kao isporučeno
                    </a>
                </div>
            </div>
        </div>
    }
</div>

