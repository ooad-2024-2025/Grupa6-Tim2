@model DressCode.Models.Popust

@{
    ViewData["Title"] = "Obriši popust";
}

<h1 class="mb-4 text-danger">@ViewData["Title"]</h1>

<div class="p-4 rounded shadow-sm" style="background-color: #f8f5f0;">
    <h4 class="mb-3">Da li ste sigurni da želite obrisati ovaj popust?</h4>

    <dl class="row mb-4">
        <dt class="col-sm-4">Kod popusta:</dt>
        <dd class="col-sm-8">@Model.KodPopust</dd>

        <dt class="col-sm-4">Vrijednost popusta:</dt>
        <dd class="col-sm-8">@Model.VrijednostPopusta %</dd>

        <dt class="col-sm-4">Pristupni kod:</dt>
        <dd class="col-sm-8">@Model.PristupniKod</dd>
    </dl>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Obriši</button>
        <a asp-action="Index" class="btn btn-secondary">Odustani</a>
    </form>
</div>

<style>
    .btn-danger {
        background-color: #8b3b3b;
        border-color: #8b3b3b;
    }

        .btn-danger:hover {
            background-color: #6b2b2b;
            border-color: #6b2b2b;
        }

    body {
        background-color: #f5f3ee;
    }
</style>
