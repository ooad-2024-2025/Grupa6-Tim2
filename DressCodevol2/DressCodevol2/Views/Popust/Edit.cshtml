@model DressCode.Models.Popust

@{
    ViewData["Title"] = "Uredi popust";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" class="p-4 rounded shadow-sm" style="background-color: #f8f5f0;">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="VrijednostPopusta" class="form-label"></label>
                <input asp-for="VrijednostPopusta" class="form-control" />
                <span asp-validation-for="VrijednostPopusta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="KodPopust" class="form-label"></label>
                <input asp-for="KodPopust" class="form-control" />
                <span asp-validation-for="KodPopust" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Spasi promjene</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Nazad na listu</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-primary {
        background-color: #7c5c43;
        border-color: #7c5c43;
    }

        .btn-primary:hover {
            background-color: #5a3e2b;
            border-color: #5a3e2b;
        }

    body {
        background-color: #f5f3ee;
    }
</style>
