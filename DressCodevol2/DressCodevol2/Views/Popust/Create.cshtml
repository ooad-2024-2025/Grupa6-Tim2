@model DressCode.Models.Popust

@{
    ViewData["Title"] = "Dodaj Popust";
}

<h1 class="custom-title">@ViewData["Title"]</h1>

<div class="card shadow-sm p-4 mb-4">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="KodPopust" class="form-label">Kod popusta</label>
            <input asp-for="KodPopust" class="form-control" placeholder="Unesite kod popusta" autocomplete="off"/>
            <span asp-validation-for="KodPopust" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="VrijednostPopusta" class="form-label">Vrijednost popusta (%)</label>
            <input asp-for="VrijednostPopusta" class="form-control" placeholder="Unesite vrijednost popusta"autocomplete="off" />
            <span asp-validation-for="VrijednostPopusta" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Nazad na listu</a>
            <button type="submit" class="btn btn-outline-brown me-2">Dodaj popust</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
