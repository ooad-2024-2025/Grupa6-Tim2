@model DressCode.Models.KorpaViewModel
@{
    ViewData["Title"] = "Korpa - Index";
}

<h1>Vaša Korpa</h1>

<!-- Display success/error messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Stavke.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Artikal</th>
                <th>Količina</th>
                <th>Cijena po komadu</th>
                <th>Ukupno</th>
                <th>Akcije</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stavka in Model.Stavke)
            {
                <tr>
                    <td>@stavka.ArtikalNaziv</td>
                    <td>@stavka.Kolicina</td>
                    <td>@stavka.CijenaPoKomadu.ToString("F2")</td>
                    <td>@stavka.Ukupno.ToString("F2")</td>
                    <td>
                        <form asp-action="IzbaciElement" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="stavkaKorpeId" value="@stavka.StavkaKorpeId" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Da li ste sigurni da želite ukloniti ovaj artikal?')">
                                Ukloni
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Popust sekcija -->
    <div class="card mt-3">
        <div class="card-header">
            <h5>Kod popusta</h5>
        </div>
        <div class="card-body">
            @if (string.IsNullOrEmpty(Model.KodPopusta))
            {
                <form asp-action="PrimijeniPopust" method="post" class="row g-3">
                    @Html.AntiForgeryToken()
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="kodPopusta" placeholder="Unesite kod popusta (npr. POPUST20)" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-tags"></i> Primijeni popust
                        </button>
                    </div>
                </form>
            }
            else
            {
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="badge bg-success">Kod popusta: @Model.KodPopusta</span>
                        <span class="text-success">(@Model.VrijednostPopusta% popust)</span>
                    </div>
                    <form asp-action="UkloniPopust" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-times"></i> Ukloni popust
                        </button>
                    </form>
                </div>
            }
        </div>
    </div>

    <!-- Ukupna cijena sekcija -->
    <div class="card mt-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 offset-md-6">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Cijena artikala:</strong></td>
                            <td class="text-end"><strong>@Model.UkupnaCijena.ToString("F2") BAM</strong></td>
                        </tr>
                        @if (Model.IznosPopusta.HasValue)
                        {
                            <tr class="table-success">
                                <td>Popust (@Model.VrijednostPopusta%):</td>
                                <td class="text-end">-@Model.IznosPopusta.Value.ToString("F2") BAM</td>
                            </tr>
                        }
                        <tr class="table-primary">
                            <td><strong>UKUPNO ZA NAPLATU:</strong></td>
                            <td class="text-end"><strong>@Model.FinalnaUkupnaCijena.ToString("F2") BAM</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Naruci" method="post" style="display: inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-shopping-cart"></i> Naruči (@Model.FinalnaUkupnaCijena.ToString("F2") BAM)
            </button>
        </form>
        @if (User.IsInRole("Administrator") || User.IsInRole("Radnik"))
        {
            <a asp-action="Edit" asp-route-id="@Model.KorpaId" class="btn btn-secondary">Uredi korpu</a>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Vaša korpa je prazna</h4>
        <p>Dodajte artikle u korpu da biste mogli napraviti narudžbu.</p>
    </div>
}

<p class="mt-3">
    <a asp-controller="Home" asp-action="Index">Nazad na početnu</a>
</p>