@model List<RadnikListItemViewModel>
@{
    ViewData["Title"] = "Radnici";
}

<h1 class="custom-title">Radnici</h1>

<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-outline-brown me-2">
        <i class="bi bi-person-plus"></i> Dodaj novog radnika
    </a>
</div>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var r in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm h-100 border-0">
                    <img src="@r.SlikaUrl" class="card-img-top rounded-top" style="height: 200px; object-fit: cover;" alt="Slika radnika" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-center">@r.ImePrezime</h5>
                        <div class="d-grid">
                            <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-outline-brown me-2">
                                Pogledaj detalje
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background: #f7f3f0;
    }

    .btn-outline-brown {
        color: #7a5c40;
        border-color: #7a5c40;
    }

        .btn-outline-brown:hover {
            background-color: #7a5c40;
            color: #f5f0e6;
            border-color: #7a5c40;
        }

    .btn-brown {
        background-color: #7a5c40;
        color: #f5f0e6;
        border: none;
    }

        .btn-brown:hover {
            background-color: #5b4636;
            color: #f5f0e6;
        }

    .custom-title {
        color: #8b6b43; /* promijenjena boja naslova */
        text-align: center;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1.5rem;
        font-size: 2rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

</style>
