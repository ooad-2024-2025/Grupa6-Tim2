@model List<RadnikListItemViewModel>
@{
    ViewData["Title"] = "Radnici";
}

<h1 class="text-center my-4">Radnici</h1>

<div class="text-center mb-4">
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="bi bi-person-plus"></i> Dodaj Novog Radnika
    </a>
</div>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var r in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm h-100 border-0">
                    <img src="@r.SlikaUrl" class="card-img-top rounded-top" style="height: 200px; object-fit: cover;" alt="Slika radnika" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title text-center">@r.ImePrezime</h5>
                        <div class="d-grid">
                            <a asp-action="Details" asp-route-id="@r.Id" class="btn btn-outline-primary mt-2">
                                Pogledaj detalje
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
