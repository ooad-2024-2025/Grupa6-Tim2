@model RadnikListItemViewModel
@{
    ViewData["Title"] = "Potvrda brisanja";
}

<h2 class="custom-title">Da li ste sigurni da želite obrisati radnika @Model.Ime @Model.Prezime?</h2>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-outline-brown me-2">Odustani</a>
</form>


<style>
    body {
        background: #f7f3f0;
    }

    .btn-outline-brown {
        color: #7a5c40;
        border-color: #7a5c40;
    }

        .btn-outline-brown:hover {
            background-color: #7a5c40;
            color: #f5f0e6;
            border-color: #7a5c40;
        }

    .btn-brown {
        background-color: #7a5c40;
        color: #f5f0e6;
        border: none;
    }

        .btn-brown:hover {
            background-color: #5b4636;
            color: #f5f0e6;
        }

    .custom-title {
        color: #8b6b43; /* promijenjena boja naslova */
        text-align: left;
        font-weight: 700;
        margin-top: 2rem;
        margin-bottom: 1.5rem;
        font-size: 2rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

</style>
