@model Stripe.Charge

<div class="container mt-4">
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Uspješno plaćanje</h4>
        <hr>
        <p class="mb-0">
            <strong>ID Narudžbe:</strong> @ViewBag.NarudzbaId<br>
            <strong>Iznos:</strong> @(Model.Amount/100)KM <br>
            <strong>Status:</strong> Uspješno
        </p>
    </div>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Detalji Plaćanja</h5>
            <p class="card-text">
                Vaše plaćanje je uspješno obrađeno.
            </p>
            <a href="/" class="btn btn-secondary">Početna Strana</a>
        </div>
    </div>
</div>