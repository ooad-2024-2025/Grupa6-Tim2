@model Stripe.StripeException

<div class="container mt-4">
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Greška pri plaćanju</h4>
        <hr>
        <p class="mb-0">@ViewBag.ErrorMessage</p>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Šta možete da uradite:</h5>
            <ul>
                <li>Proverite podatke kartice i pokušajte ponovo</li>
                <li>Pokušajte sa drugom karticom</li>
                <li>Kontaktirajte vašu banku</li>
                <li>Kontaktirajte našu podršku</li>
            </ul>

            @if (ViewBag.OriginalError != null)
            {
                <div class="mt-3">
                    <small class="text-muted">
                        <strong>Tehnički detalj:</strong> @ViewBag.OriginalError
                    </small>
                </div>
            }

            <div class="mt-3">
                <a href="/Placanje" class="btn btn-primary">Pokušaj Ponovo</a>
                <a href="/" class="btn btn-secondary">Početna Strana</a>
            </div>
        </div>
    </div>
</div>