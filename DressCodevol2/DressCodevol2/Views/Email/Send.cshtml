@{
    ViewData["Title"] = "Pošalji Email";
}

<h2>Pošalji Email</h2>

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success">@ViewBag.Success</div>
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post">
    <div class="form-group">
        <label>Email adresa (ako šaljete samo jednom korisniku):</label>
        <input type="email" name="email" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input type="checkbox" name="confirm" class="form-check-input" id="confirm" />
        <label class="form-check-label" for="confirm">
            Pošalji email svim korisnicima koji su članovi Loyalty kluba
        </label>
    </div>

    <div class="form-group">
        <label>Predmet:</label>
        <input type="text" name="subject" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Poruka:</label>
        <textarea name="message" class="form-control" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Pošalji Email</button>
</form>
