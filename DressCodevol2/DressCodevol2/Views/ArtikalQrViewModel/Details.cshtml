@model DressCode.Models.ArtikalQrViewModel
@{
    ViewData["Title"] = "Detalji artikla";
    var artikal = Model.Artikal;
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-info-circle"></i> Detalji artikla
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5>Osnovne informacije</h5>
                            <hr />

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Kategorija:</label>
                                <div>
                                    <span class="badge bg-secondary fs-6">
                                        @(artikal.Kategorija?.Naziv ?? "N/A")
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Cijena:</label>
                                <div>
                                    <span class="fs-4 fw-bold text-success">
                                        @artikal.Cijena.ToString("0.00") KM
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Spol:</label>
                                <div>
                                    @if (artikal.Spol == Spol.MUSKO)
                                    {
                                        <span class="badge bg-primary fs-6">@artikal.Spol</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-pink fs-6">@artikal.Spol</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5>Specifikacije</h5>
                            <hr />

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Materijal:</label>
                                <div>
                                    <span class="badge bg-info fs-6">@artikal.Materijal</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Veličina:</label>
                                <div>
                                    <span class="badge bg-warning text-dark fs-6">@artikal.Velicina</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(artikal.Opis))
                    {
                        <div class="mb-3">
                            <h5>Opis</h5>
                            <hr />
                            <div class="card bg-light">
                                <div class="card-body">
                                    <p class="mb-0">@artikal.Opis</p>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="mb-4">
                        <h5>QR kod za ovaj artikal</h5>
                        <hr />
                        <div class="text-center">
                            <img src="@Model.QrImageData" alt="QR kod za artikal" class="img-fluid" style="max-width:200px;" />
                            <p class="mt-2 small text-muted">Skeniraj kod za otvaranje detalja artikla na mobilnom uređaju.</p>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Edit" asp-route-id="@artikal.Id" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Uredi
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Nazad na listu
                            </a>
                        </div>
                        <div>
                            <form asp-action="DodajUKorpu" asp-route-id="@artikal.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-shopping-cart"></i> Dodaj u korpu
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-pink {
        background-color: #e83e8c !important;
        color: white;
    }

    .fs-6 {
        font-size: 1rem !important;
    }
</style>
