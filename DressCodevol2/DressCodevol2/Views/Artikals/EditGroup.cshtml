@model DressCode.Models.EditGroupViewModel
@{
    ViewData["Title"] = "Uredi grupu artikala";
}
<h2>@ViewData["Title"] - @Model.GrupaId</h2>
<form asp-action="EditGroup" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="GrupaId" />
    <div class="form-group">
        <label asp-for="ZajednickaCijena"></label>
        <input asp-for="ZajednickaCijena" class="form-control" />
        <span asp-validation-for="ZajednickaCijena" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZajednickiMaterijal"></label>
        <input asp-for="ZajednickiMaterijal" class="form-control" />
        <span asp-validation-for="ZajednickiMaterijal" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ZajednickiOpis"></label>
        <input asp-for="ZajednickiOpis" class="form-control" />
        <span asp-validation-for="ZajednickiOpis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="KategorijaId"></label>
        <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.Kategorije"></select>
        <span asp-validation-for="KategorijaId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Spremi promjene</button>
    <a asp-action="Index" class="btn btn-secondary">Otkaži</a>
</form>
