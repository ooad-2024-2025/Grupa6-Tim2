@model DressCode.Models.EditGroupViewModel

@{
    ViewData["Title"] = "Uredi grupu artikala";
}

<div class="edit-container">
    <div class="edit-header">
        <h2>Uredi grupu - @Model.GrupaId</h2>
        <p class="edit-subtitle">Izmijenite zajedničke podatke za artikle u ovoj grupi</p>
    </div>

    <div class="edit-form-container">
        <form asp-action="EditGroup" method="post" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <input type="hidden" asp-for="GrupaId" />

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="ZajednickaCijena" class="form-label">Cijena (KM)</label>
                    <input asp-for="ZajednickaCijena" class="form-control" />
                    <span asp-validation-for="ZajednickaCijena" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ZajednickiMaterijal" class="form-label">Materijal</label>
                    <input asp-for="ZajednickiMaterijal" class="form-control" />
                    <span asp-validation-for="ZajednickiMaterijal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ZajednickiOpis" class="form-label">Opis</label>
                    <textarea asp-for="ZajednickiOpis" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="ZajednickiOpis" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="KategorijaId" class="form-label">Kategorija</label>
                    <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.Kategorije">
                        <option value="">-- Odaberite kategoriju --</option>
                    </select>
                    <span asp-validation-for="KategorijaId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">Spremi promjene</button>
                <a asp-action="Index" class="btn-back">Otkaži</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<style>
    body {
        background: #f7f3f0;
    }

    .edit-container {
        max-width: 900px;
        margin: 30px auto;
        background: #fffaf5;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        overflow: hidden;
        font-family: 'Segoe UI', sans-serif;
    }

    .edit-header {
        background: linear-gradient(135deg, #a18464, #c8b08e);
        color: white;
        padding: 25px 30px;
    }

    .edit-subtitle {
        opacity: 0.9;
        margin-top: 5px;
        font-size: 0.95rem;
    }

    .edit-form-container {
        padding: 30px;
    }

    .edit-form {
        display: flex;
        flex-direction: column;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #4a3b29;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 0.95rem;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #a18464;
            box-shadow: 0 0 0 3px rgba(161, 132, 100, 0.2);
            outline: none;
        }

    select.form-control {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 10px center;
        background-size: 15px;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .btn-save {
        background: linear-gradient(135deg, #a18464, #c8b08e);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(161, 132, 100, 0.3);
        }

    .btn-back {
        color: #a18464;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 6px;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #f8f9fa;
            text-decoration: none;
        }

    .validation-summary {
        color: #dc3545;
        margin-bottom: 20px;
        padding: 10px;
        background: #f8d7da;
        border-radius: 6px;
    }

    .text-danger {
        font-size: 0.85rem;
        color: #dc3545;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
