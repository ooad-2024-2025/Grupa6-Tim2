@model DressCode.Models.Artikal

@{
    ViewData["Title"] = "Dodavanje artikla";
}

<h1>Create</h1>
@Html.AntiForgeryToken()
<h4>Artikal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="KategorijaId" class="control-label"></label>
                <select asp-for="KategorijaId" class="form-control" asp-items="@(ViewData["Kategorija"] as SelectList)">
                    <option value="0">-- Odaberite tip odjeće --</option>
                </select>
                <span asp-validation-for="KategorijaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cijena" class="control-label"></label>
                <input asp-for="Cijena" class="form-control" />
                <span asp-validation-for="Cijena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materijal" class="control-label"></label>
                <input asp-for="Materijal" class="form-control" />
                <span asp-validation-for="Materijal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Velicina" class="control-label"></label>
                <select asp-for="Velicina" class="form-control" asp-items="@(ViewData["Velicine"] as SelectList)">
                    <option value="">-- Odaberite veličinu --</option>
                </select>
                <span asp-validation-for="Velicina" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Spol" class="control-label"></label>
                <select asp-for="Spol" class="form-control" asp-items="@(ViewData["Spolovi"] as SelectList)">
                    <option value="">-- Odaberite spol --</option>
                </select>
                <span asp-validation-for="Spol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kolicina" class="control-label"></label>
                <input asp-for="Kolicina" class="form-control" />
                <span asp-validation-for="Kolicina" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label>Slika (jpg/png)</label>
                <input type="file" name="Slika" class="form-control" ></input>
                <img src="~/images/ArtikalDefault.png" style="height:100px; margin-top:10px;">
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu artikala</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
