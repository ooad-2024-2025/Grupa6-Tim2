@model DressCode.Models.Artikal

@{
    ViewData["Title"] = "Dodavanje artikla";
}

<div class="edit-container">
    <div class="edit-header">
        <h2>Dodaj novi artikal</h2>
        <p class="edit-subtitle">Unesite podatke o novom artiklu</p>
    </div>

    <div class="edit-form-container">
        <form asp-action="Create" enctype="multipart/form-data" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-grid">
                <div class="form-group">
                    <label asp-for="KategorijaId" class="form-label">Kategorija</label>
                    <select asp-for="KategorijaId" class="form-control" asp-items="ViewBag.Kategorija">
                        <option value="">-- Odaberite tip odjeće --</option>
                    </select>
                    <span asp-validation-for="KategorijaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cijena" class="form-label">Cijena (KM)</label>
                    <input asp-for="Cijena" class="form-control" />
                    <span asp-validation-for="Cijena" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Materijal" class="form-label">Materijal</label>
                    <input asp-for="Materijal" class="form-control" />
                    <span asp-validation-for="Materijal" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Velicina" class="form-label">Veličina</label>
                    <select asp-for="Velicina" class="form-control" asp-items="ViewBag.Velicine">
                        <option value="">-- Odaberite veličinu --</option>
                    </select>
                    <span asp-validation-for="Velicina" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Spol" class="form-label">Spol</label>
                    <select asp-for="Spol" class="form-control" asp-items="ViewBag.Spolovi">
                        <option value="">-- Odaberite spol --</option>
                    </select>
                    <span asp-validation-for="Spol" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Opis" class="form-label">Opis</label>
                    <textarea asp-for="Opis" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Opis" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Kolicina" class="form-label">Količina</label>
                    <input asp-for="Kolicina" class="form-control" />
                    <span asp-validation-for="Kolicina" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GrupaId" class="form-label">Grupa ID</label>
                    <input asp-for="GrupaId" class="form-control" placeholder="npr. BK za bijelu košulju" />
                    <span asp-validation-for="GrupaId" class="text-danger"></span>
                </div>

                <div class="form-group image-upload">
                    <label class="form-label">Slika artikla</label>
                    <div class="image-preview">
                        <img src="~/images/ArtikalDefault.png" alt="Default slika" />
                    </div>
                    <label class="file-upload-label">
                        Odaberite sliku
                        <input type="file" name="slika" class="form-control-file" accept="image/png, image/jpeg" />
                    </label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">Dodaj artikal</button>
                <a asp-action="Index" class="btn-back">Natrag na listu</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .edit-container {
        max-width: 900px;
        margin: 30px auto;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        overflow: hidden;
        font-family: 'Segoe UI', sans-serif;
    }

    .edit-header {
        background: linear-gradient(135deg, #6f42c1, #8e44ad);
        color: white;
        padding: 25px 30px;
    }

    .edit-subtitle {
        opacity: 0.9;
        margin-top: 5px;
        font-size: 0.95rem;
    }

    .edit-form-container {
        padding: 30px;
    }

    .edit-form {
        display: flex;
        flex-direction: column;
    }

    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #444;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border: 1px solid #ddd;
        border-radius: 6px;
        font-size: 0.95rem;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #6f42c1;
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
            outline: none;
        }

    select.form-control {
        appearance: none;
        background-image: url("data:image/svg+xml;charset=UTF-8,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'%3e%3cpolyline points='6 9 12 15 18 9'%3e%3c/polyline%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 10px center;
        background-size: 15px;
    }

    .image-upload {
        grid-column: span 2;
    }

    .image-preview {
        margin-bottom: 15px;
    }

        .image-preview img {
            max-width: 100%;
            height: auto;
            max-height: 200px;
            border-radius: 6px;
            border: 1px solid #eee;
        }

    .file-upload-label {
        display: block;
        padding: 10px 15px;
        background: #f8f9fa;
        border: 1px dashed #ccc;
        border-radius: 6px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
    }

        .file-upload-label:hover {
            background: #e9ecef;
            border-color: #6f42c1;
        }

    .form-control-file {
        display: none;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    .btn-save {
        background: linear-gradient(135deg, #6f42c1, #8e44ad);
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 6px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(111, 66, 193, 0.3);
        }

    .btn-back {
        color: #6f42c1;
        text-decoration: none;
        padding: 10px 15px;
        border-radius: 6px;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: #f8f9fa;
            text-decoration: none;
        }

    .validation-summary {
        color: #dc3545;
        margin-bottom: 20px;
        padding: 10px;
        background: #f8d7da;
        border-radius: 6px;
    }

    .text-danger {
        font-size: 0.85rem;
        color: #dc3545;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .image-upload {
            grid-column: span 1;
        }
    }
</style>