@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Promjena lozinke";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 rounded-top-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-lock fa-2x me-3"></i>
                        <div>
                            <h3 class="mb-0 fw-bold">Promjena lozinke</h3>
                            <p class="mb-0 opacity-75">Ažuriranje postojeće lozinke</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="change-password-form" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.OldPassword" class="form-control form-control-lg border-2 rounded-3"
                                           autocomplete="current-password" placeholder="Unesite trenutnu lozinku." />
                                    <label asp-for="Input.OldPassword" class="form-label text-muted">
                                        <i class="fas fa-key me-2"></i>Trenutna lozinka
                                    </label>
                                    <span asp-validation-for="Input.OldPassword" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.NewPassword" class="form-control form-control-lg border-2 rounded-3"
                                           autocomplete="new-password" placeholder="Unesite novu lozinku." />
                                    <label asp-for="Input.NewPassword" class="form-label text-muted">
                                        <i class="fas fa-lock me-2"></i>Nova lozinka
                                    </label>
                                    <span asp-validation-for="Input.NewPassword" class="text-danger small mt-1"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg border-2 rounded-3"
                                           autocomplete="new-password" placeholder="Potvrdite novu lozinku." />
                                    <label asp-for="Input.ConfirmPassword" class="form-label text-muted">
                                        <i class="fas fa-check-circle me-2"></i>Potvrdi novu lozinku
                                    </label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small mt-1"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 py-3 fw-bold">
                                <i class="fas fa-sync-alt me-2"></i>Promijeni lozinku
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

    .card {
        transition: all 0.3s ease;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}