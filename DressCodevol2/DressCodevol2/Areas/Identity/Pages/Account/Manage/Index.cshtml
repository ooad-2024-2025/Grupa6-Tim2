@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient-primary text-white py-4 rounded-top-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user-circle fa-2x me-3"></i>
                        <div>
                            <h3 class="mb-0 fw-bold">@ViewData["Title"]</h3>
                            <p class="mb-0 opacity-75">Ažurirajte svoje korisničke podatke</p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="profile-form" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert"></div>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 position-relative">
                                    <input asp-for="Username" class="form-control form-control-lg border-2 rounded-3 small-text"
                                           placeholder="Molimo odaberite username." disabled />
                                    <label asp-for="Username" class="form-label text-muted">
                                        <i class="fas fa-user me-2"></i>Korisničko ime
                                    </label>
                                    <div class="position-absolute top-50 end-0 translate-middle-y me-3">
                                        <i class="fas fa-lock text-muted"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Input.PhoneNumber" class="form-control form-control-lg border-2 rounded-3"
                                           placeholder="Unesite broj telefona." />
                                    <label asp-for="Input.PhoneNumber" class="form-label text-muted">
                                        <i class="fas fa-phone me-2"></i>Broj telefona
                                    </label>
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger small mt-1"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.DatumRodjenja" type="date" class="form-control form-control-lg border-2 rounded-3" />
                                <label asp-for="Input.DatumRodjenja" class="form-label text-muted">
                                    <i class="fas fa-calendar-alt me-2"></i>Datum rođenja
                                </label>
                                <span asp-validation-for="Input.DatumRodjenja" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.JMBG" class="form-control form-control-lg border-2 rounded-3"
                                       placeholder="Unesite JMBG." />
                                <label asp-for="Input.JMBG" class="form-label text-muted">
                                    <i class="fas fa-id-card me-2"></i>JMBG
                                </label>
                                <span asp-validation-for="Input.JMBG" class="text-danger small mt-1"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-check mb-3 ps-2">
                                <input asp-for="Input.IsLoyal" class="form-check-input" />
                                <label asp-for="Input.IsLoyal" class="form-check-label text-muted">
                                    Želim biti član Loyalty kluba
                                </label>
                            </div>
                        </div>


                        <div class="d-grid gap-2 mt-4">
                            <button id="update-profile-button" type="submit"
                                    class="btn btn-primary btn-lg rounded-3 py-3 fw-bold">
                                <i class="fas fa-save me-2"></i>Sačuvaj promjene
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

    .card {
        transition: all 0.3s ease;
    }

    .small-text {
        font-size: 0.85rem;
    }

</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}