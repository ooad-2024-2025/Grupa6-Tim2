@page
@model ChangePasswordModel

@{
    ViewData["Title"] = "Promjena lozinke";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="profile-card">
    <div class="profile-header">
        <h2>Promjena lozinke</h2>
        <p>Ažurirajte svoju lozinku</p>
    </div>

    <partial name="_StatusMessage" for="StatusMessage" />

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.OldPassword">Stara lozinka</label>
            <input asp-for="Input.OldPassword" class="form-control" placeholder="Unesite staru lozinku" />
            <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.NewPassword">Nova lozinka</label>
            <input asp-for="Input.NewPassword" class="form-control" placeholder="Unesite novu lozinku" />
            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword">Potvrdite lozinku</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Potvrdite lozinku" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
        </div>

        <button type="submit" class="save-button">Sačuvaj promjene</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

