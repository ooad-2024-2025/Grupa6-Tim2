@page
@model ChangePasswordModel

@{
    ViewData["Title"] = "Promjena lozinke";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="profile-card">
    <div class="profile-header">
        <h2>Promjena lozinke</h2>
        <p class="header-subtitle">Ažurirajte svoju lozinku</p>
    </div>

    <div class="profile-content">
        <partial name="_StatusMessage" for="StatusMessage" />

        <form method="post" class="password-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.OldPassword" class="form-label">Stara lozinka</label>
                <input asp-for="Input.OldPassword" class="form-control" placeholder="Unesite staru lozinku" />
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.NewPassword" class="form-label">Nova lozinka</label>
                <input asp-for="Input.NewPassword" class="form-control" placeholder="Unesite novu lozinku" />
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="form-label">Potvrdite lozinku</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Potvrdite lozinku" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="save-button">Sačuvaj promjene</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .profile-card {
        max-width: 500px;
        margin: 50px auto;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        overflow: hidden;
        background: white;
        font-family: 'Segoe UI', sans-serif;
    }

    .profile-header {
        background: linear-gradient(135deg, #6f42c1, #8e44ad);
        color: white;
        padding: 30px;
        text-align: center;
    }

    .header-subtitle {
        opacity: 0.9;
        margin-top: 8px;
        font-size: 0.95rem;
    }

    .profile-content {
        padding: 30px;
    }

    .password-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control {
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #6f42c1;
            box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.1);
            outline: none;
        }

    .save-button {
        background: linear-gradient(135deg, #6f42c1, #8e44ad);
        color: white;
        border: none;
        padding: 12px 20px;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        margin-top: 1rem;
    }

        .save-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(111, 66, 193, 0.3);
        }

    .text-danger {
        font-size: 0.85rem;
    }
</style>