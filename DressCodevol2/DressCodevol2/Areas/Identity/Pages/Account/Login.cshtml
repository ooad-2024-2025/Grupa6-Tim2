@page
@model LoginModel
@{
    ViewData["Title"] = "Prijava";
}

<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Google Font Inter -->
    <link href="https://fonts.googleapis.com/css?family=Inter&display=swap" rel="stylesheet" />
    <!-- Vaš CSS za login -->
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="v10_144">
        <div class="v10_145">
            <!-- Naslov Prijava -->
            <div class="v10_165">
                <span class="v10_166">@ViewData["Title"]</span>
            </div>

            <!-- Forma za prijavu -->
            <form id="account" method="post">
                <!-- Email polje -->
                <div class="v10_154">
                    <label asp-for="Input.Email" class="v10_155">Email adresa</label>
                    <input asp-for="Input.Email" type="email" class="v10_157" placeholder="email@mail.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password polje -->
                <div class="v10_158">
                    <label asp-for="Input.Password" class="v10_159">Lozinka</label>
                    <input asp-for="Input.Password" type="password" class="v10_161" placeholder="******" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- Gumb Prijava -->
                <div class="v10_162">
                    <button type="submit" class="v10_163">Prijava</button>
                </div>
            </form>

            <!-- Link za registraciju -->
            <div class="v42_335">
                <span>Nemate korisnički profil?</span>
                <a asp-page="./Register" class="v42_338">Registruj se</a>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
